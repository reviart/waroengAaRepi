<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.revicere.apakek.AboutActivity">
    <TextView
        android:id="@+id/judul_informasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tentang aplikasi ini"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama aplikasi ini adalah 'WAROENG AA REPI', aplikasi ini dibuat hanya untuk ketika berada dilokasi rumah makan tersebut, aplikasi sederhana ini menggambarkan sedikit bagaimana aplikasi e-commerce dibuat. 'WAROENG AA REPI' hanya menyediakan makanan dan minuman khas sunda."
        android:layout_below="@id/judul_informasi"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developer : Risjad Muhammad Reviansyah"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:layout_below="@id/txt_desc"
        />

</RelativeLayout>
